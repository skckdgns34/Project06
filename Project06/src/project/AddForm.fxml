<BorderPane style="-fx-background-color: #aaaaaa;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<padding>
		<Insets topRightBottomLeft="20" />
	</padding>
	<center>
		<GridPane alignment="CENTER" hgap="10" vgap="10" BorderPane.alignment="CENTER">
   <children>
   			<Label prefWidth="50" text="Month" textFill="#fffefe" />
   			<Label prefWidth="50" text="Korean" textFill="#fffefe" GridPane.rowIndex="1" />
   			<Label prefWidth="50" text="Math" textFill="#f5f4f4" GridPane.columnIndex="0" GridPane.rowIndex="2" />
